{
  "name": "timetrack-backend",
  "version": "1.0.0",
  "description": "Backend for Workhours overtime management system",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "prestart": "node -e \"require('dotenv').config(); if(process.env.DATABASE_URL){require('child_process').execSync('prisma migrate deploy',{stdio:'inherit'})}else{console.log('⚠️  DATABASE_URL não configurada. Pulando migrations.')}\"",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.0",
    "pdfkit": "^0.13.0",
    "prisma": "^6.19.0",
    "react-csv": "^2.2.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  }
}
